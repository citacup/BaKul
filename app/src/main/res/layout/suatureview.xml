<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/marginluar"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:elevation="@dimen/margindalem"
        android:orientation="vertical"
        android:padding="@dimen/margindalem"
        android:weightSum="1">

        <TextView
            android:id="@+id/labeltext"
            style="@style/sectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:text="Review Mata Kuliah"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20sp"
            android:layout_weight="0.80"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/isilabel"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical|left"
                        android:padding="10sp"
                        android:text="Isi Review"/>

                    <TextView
                        android:id="@+id/isi2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/isi"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical|left"
                        android:text="Isi Review"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelsuka"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical|left"
                        android:padding="10sp"
                        android:text="Jumlah Suka"/>

                    <TextView
                        android:id="@+id/suka2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal"
                        android:text=":"/>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/suka"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/circle"
                            android:clickable="true"
                            android:onClick="suatuReviewListener"
                            android:src="@drawable/like"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.4"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/jumlahsuka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:editable="false"
                            android:ems="3"
                            android:focusable="false"
                            android:gravity="center_vertical|center_horizontal"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labeltidaksuka"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical|left"
                        android:padding="10sp"
                        android:text="Jumlah Tidak Suka"/>

                    <TextView
                        android:id="@+id/tidaksuka2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal"
                        android:text=":"/>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/tidaksuka"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/circle"
                            android:clickable="true"
                            android:onClick="suatuReviewListener"
                            android:src="@drawable/dislike"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.4"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/jumlahtidaksuka"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:editable="false"
                            android:ems="3"
                            android:focusable="false"
                            android:gravity="center_vertical|center_horizontal"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labellapor"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical|left"
                        android:padding="10sp"
                        android:text="Lapor Review"/>

                    <TextView
                        android:id="@+id/lapor2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal"
                        android:text=":"/>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/submitLaporan"
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginLeft="5sp"
                            android:background="@drawable/circle"
                            android:clickable="true"
                            android:onClick="sendReportListener"
                            android:src="@drawable/kirim"/>
                    </LinearLayout>

                </LinearLayout>

                <EditText
                    android:id="@+id/editTextReport"
                    android:layout_width="fill_parent"
                    android:layout_height="0sp"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10sp"
                    android:layout_weight="0.20"
                    android:background="@drawable/abc_ab_share_pack_holo_light"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="Komentar Anda di sini ..."
                    android:inputType="textMultiLine"
                    android:layout_margin="15sp"
                    android:padding="5sp"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ok"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:onClick="suatuReviewListener"
                android:src="@drawable/ok"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
