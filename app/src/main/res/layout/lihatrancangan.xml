                    android:id="@+id/s9"
                    style="@style/sectionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Semester 9"
                    android:visibility="gone"/>

                <ListView
                    android:id="@+id/sem9"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/s10"
                    style="@style/sectionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Semester 10"
                    android:visibility="gone"/>

                <ListView
                    android:id="@+id/sem10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/s11"
                    style="@style/sectionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Semester 11"
                    android:visibility="gone"/>

                <ListView
                    android:id="@+id/sem11"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/s12"
                    style="@style/sectionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Semester 12"
                    android:visibility="gone"/>

                <ListView
                    android:id="@+id/sem12"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ok"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:onClick="lihatRancanganListener"
                android:src="@drawable/ok"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
