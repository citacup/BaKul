<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:padding="@dimen/marginluar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"
        android:padding="@dimen/margindalem"
        android:elevation="@dimen/margindalem">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff0272bc"
            android:id="@+id/labellayout"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perancangan Kuliah"
                android:id="@+id/labeltext"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize"
                android:textStyle="italic"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelimg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:src="@drawable/ubah" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah data untuk semester yang akan diambil"
            android:id="@+id/label"
            style="@style/sectionHeader"
            android:layout_marginTop="30sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.8"
            android:layout_marginTop="10sp"
            android:visibility="visible">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/scrollView"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Semester 1"
                            android:id="@+id/s1"
                            android:layout_weight="1"
                            android:background="@drawable/abc_ab_share_pack_holo_light"
                            android:layout_margin="5sp"
                            android:textColor="@color/biru"
                            android:textStyle="italic"
                            android:visibility="invisible"
                            android:clickable="true"
                            android:onClick="ubahSemester1Listener" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Semester 2"
                            android:id="@+id/s2"
                            android:layout_weight="1"
                            android:background="@drawable/abc_ab_share_pack_holo_light"
                            android:layout_margin="5sp"
                            android:textColor="@color/biru"
                            android:textStyle="italic"
                            android:visibility="invisible"
                            android:clickable="true"
                            android:onClick="ubahSemester1Listener"/>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Semester 3"
                            android:id="@+id/s3"
                            android:layout_weight="1"
                            android:background="@drawable/abc_ab_share_pack_holo_light"
                            android:layout_margin="5sp"
                            android:textColor="@color/biru"
                            android:textStyle="italic"
                            android:visibility="invisible"
                            android:clickable="true"
                            android:onClick="ubahSemester1Listener" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Semester 4"
                            android:id="@+id/s4"
                            android:layout_weight="1"
                            android:background="@drawable/abc_ab_share_pack_holo_light"
                            android:layout_margin="5sp"
                            android:textColor="@color/biru"
                            android:textStyle="italic"
                            android:visibility="invisible"
                            android:clickable="true"
                            android:onClick="ubahSemester1Listener" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Semester 5"
                            android:id="@+id/s5"
                            android:layout_weight="1"
                            android:background="@drawable/abc_ab_share_pack_holo_light"
                            android:layout_margin="5sp"
                            android:textColor="@color/biru"
                            android:textStyle="italic"
                            android:visibility="invisible"
                            android:clickable="true"
                            android:onClick="ubahSemester1Listener" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Semester 6"
                            android:id="@+id/s6"
                            android:layout_weight="1"
                            android:background="@drawable/abc_ab_share_pack_holo_light"
                            android:layout_margin="5sp"
                            android:textColor="@color/biru"
                            android:textStyle="italic"
                            android:visibility="invisible"
                            android:clickable="true"
                            android:onClick="ubahSemester1Listener" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Semester 7"
                            android:id="@+id/s7"
                            android:layout_weight="1"
                            android:background="@drawable/abc_ab_share_pack_holo_light"
                            android:layout_margin="5sp"
                            android:textColor="@color/biru"
                            android:textStyle="italic"
                            android:visibility="invisible"
                            android:clickable="true"
                            android:onClick="ubahSemester1Listener" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Semester 8"
                            android:id="@+id/s8"
                            android:layout_weight="1"
                            android:background="@drawable/abc_ab_share_pack_holo_light"
                            android:layout_margin="5sp"
                            android:textColor="@color/biru"
                            android:textStyle="italic"
                            android:clickable="true"
                            android:visibility="invisible"
                            android:onClick="ubahSemester1Listener" />
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2"
            android:gravity="center_vertical|right">

            <Button android:id="@+id/lihat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat"
                android:textStyle="italic"
                android:background="@color/biru"
                android:textColor="@android:color/white"
                android:clickable="true"
                android:onClick="ubahSemester2Listener"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
