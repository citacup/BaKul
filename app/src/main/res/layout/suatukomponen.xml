<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/marginluar"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:elevation="@dimen/margindalem"
        android:orientation="vertical"
        android:padding="@dimen/margindalem"
        android:weightSum="1">

        <TextView
            android:id="@+id/labeltext"
            style="@style/sectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:text="Komponen Nilai"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/label"
            style="@style/sectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Komponen Mata Kuliah"/>

        <LinearLayout
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5sp"
            android:layout_weight="0.80"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/namalabel"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical|left"
                        android:padding="10sp"
                        android:text="Komponen"/>

                    <TextView
                        android:id="@+id/isi2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal"
                        android:text=":"/>

                    <EditText
                        android:id="@+id/nama"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical|left"
                        android:hint="Nama"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nilailabel"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical|left"
                        android:padding="10sp"
                        android:text="Nilai"/>

                    <TextView
                        android:id="@+id/suka2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal"
                        android:text=":"/>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/nilai"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:ems="8"
                            android:gravity="center_vertical|left"
                            android:hint="Nilai"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/persentaselabel"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.35"
                        android:gravity="center_vertical|left"
                        android:padding="10sp"
                        android:text="Persentase"/>

                    <TextView
                        android:id="@+id/tidaksuka2"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal"
                        android:text=":"/>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/persentase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5sp"
                            android:ems="8"
                            android:gravity="center_vertical|left"
                            android:hint="% Persentase"
                            android:inputType="numberDecimal"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/simpan"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="10sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:src="@drawable/save"/>

            <ImageView
                android:id="@+id/hapus"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15sp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:src="@drawable/hapus"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
