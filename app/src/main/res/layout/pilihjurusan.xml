<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:padding="@dimen/marginluar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"
        android:padding="@dimen/margindalem"
        android:elevation="@dimen/margindalem">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff0272bc"
            android:id="@+id/labellayout"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih Jurusan"
                android:id="@+id/labeltext"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize"
                android:textStyle="italic"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_ab_share_pack_holo_light"
            android:id="@+id/ilkomlayout"
            android:layout_marginTop="70dp"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="mainMenu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ilkomimage"
                android:src="@drawable/ilkom"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:clickable="true"
                android:onClick="mainMenu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ilmu Komputer"
                android:id="@+id/ilkomtext"
                android:textColor="@color/biru"
                android:textSize="@dimen/textpilihan"
                android:textStyle="italic"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:clickable="true"
                android:onClick="mainMenu"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_ab_share_pack_holo_light"
            android:id="@+id/silayout"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="mainMenu">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/siimage"
                android:src="@drawable/si"
                android:paddingTop="5sp"
                android:paddingBottom="5sp"
                android:clickable="true"
                android:onClick="mainMenu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistem Informasi"
                android:id="@+id/sitext"
                android:textColor="@color/biru"
                android:textSize="@dimen/textpilihan"
                android:textStyle="italic"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:paddingLeft="20sp"
                android:clickable="true"
                android:onClick="mainMenu"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
