<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:padding="@dimen/marginluar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/margindalem"
        android:elevation="@dimen/margindalem"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Komponen Nilai"
            android:id="@+id/labeltext"
            style="@style/sectionHeader"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Komponen Mata Kuliah"
            android:id="@+id/label"
            style="@style/sectionHeader"
            android:layout_marginTop="20sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:id="@+id/scrollView"
            android:layout_marginTop="5sp"
            android:layout_weight="0.80">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Komponen"
                        android:id="@+id/namalabel"
                        android:layout_weight="0.35"
                        android:padding="10sp"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/isi2"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal" />

                    <EditText
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:hint="Nama"
                        android:id="@+id/nama"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical|left"
                        android:layout_marginLeft="5sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Nilai"
                        android:id="@+id/nilailabel"
                        android:layout_weight="0.35"
                        android:padding="10sp"
                        android:gravity="center_vertical|left"/>

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/suka2"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0sp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="8"
                            android:id="@+id/nilai"
                            android:gravity="center_vertical|left"
                            android:hint="Nilai"
                            android:layout_marginLeft="5sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Persentase"
                        android:id="@+id/persentaselabel"
                        android:layout_weight="0.35"
                        android:padding="10sp"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/tidaksuka2"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0sp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.6">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="8"
                            android:id="@+id/persentase"
                            android:gravity="center_vertical|left"
                            android:hint="% Persentase"
                            android:layout_marginLeft="5sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/save"
                android:background="@drawable/circle"
                android:id="@+id/simpan"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15sp"
                android:layout_marginRight="10sp"/>

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/hapus"
                android:background="@drawable/circle"
                android:id="@+id/hapus"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15sp"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
