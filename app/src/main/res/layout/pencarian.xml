<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/white"
    android:id="@+id/relativeLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="#ff0272bc"
            android:id="@+id/labellayout"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informasi Mata Kuliah"
                android:id="@+id/labeltext"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="italic"
                android:paddingTop="10sp"
                android:paddingBottom="10sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/labelimg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:src="@drawable/matkul" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_ab_share_pack_holo_light"
            android:id="@+id/namalayout"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="mainMenu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cari Berdasar Nama"
                android:id="@+id/namatext"
                android:textColor="@color/biru"
                android:textSize="28sp"
                android:textStyle="italic"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:clickable="true"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_ab_share_pack_holo_light"
            android:id="@+id/kategorilayout"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:onClick="mainMenu">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cari Berdasar Kategori"
                android:id="@+id/kategoritext"
                android:textColor="@color/biru"
                android:textSize="28sp"
                android:textStyle="italic"
                android:paddingTop="20sp"
                android:paddingBottom="20sp"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
