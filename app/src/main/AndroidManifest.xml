<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.citacup.bakul" >
	
	<uses-permission android:name="android.permission.INTERNET" ></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher">

        <!-- Splash screen -->
        <activity
            android:name=".Controller.Activity.SplashScreen"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main activity -->
        <activity
            android:name=".Controller.Activity.Login"
            android:screenOrientation="portrait"
            android:label="Bantu Kuliah"
            android:theme="@style/AppTheme">
            <!--intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter-->
        </activity>

        <!-- Pilih Jurusan -->
        <activity
            android:name=".Controller.Activity.LoginSso"
            android:screenOrientation="portrait"
            android:label="Bantu Kuliah"
            android:parentActivityName=".Controller.Activity.Login"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Controller.Activity.Login" />
        </activity>

        <!-- Pilih Jurusan -->
        <activity
            android:name=".Controller.Activity.PilihJurusan"
            android:screenOrientation="portrait"
            android:label="Bantu Kuliah"
            android:theme="@style/AppTheme">
        </activity>

        <!-- Menu Utama -->
        <activity
            android:name=".MyActivity"
            android:screenOrientation="portrait"
            android:label="Bantu Kuliah"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />/>
            </intent-filter>
        </activity>

        <!-- Splash screen Logout-->
        <activity
            android:name=".Controller.Activity.Logout"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:noHistory="true" >
        </activity>

    </application>

</manifest>
