<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:padding="@dimen/marginluar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/margindalem"
        android:background="@android:color/white"
        android:elevation="@dimen/margindalem">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/ubah"
            android:background="@drawable/circlestroke"
            android:id="@+id/labelimg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Rancangan"
            android:id="@+id/labeltext"
            style="@style/sectionHeader"
            android:layout_marginTop="10sp"
            android:gravity="center_vertical|center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah data untuk semester yang akan diambil"
            android:id="@+id/label"
            style="@style/sectionHeader"
            android:layout_marginTop="30sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.8"
            android:layout_marginTop="10sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingLeft="50sp"
                    android:paddingRight="50sp"
                    android:gravity="center_horizontal|center_vertical">

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 1"
                        android:id="@+id/s1"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:clickable="true"
                        android:onClick="ubahSemester2Listener" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 2"
                        android:id="@+id/s2"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:clickable="true"
                        android:onClick="ubahSemester2Listener"/>

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 3"
                        android:id="@+id/s3"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:clickable="true"
                        android:onClick="ubahSemester2Listener" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 4"
                        android:id="@+id/s4"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:clickable="true"
                        android:onClick="ubahSemester2Listener" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 5"
                        android:id="@+id/s5"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:clickable="true"
                        android:onClick="ubahSemester2Listener" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 6"
                        android:id="@+id/s6"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:clickable="true"
                        android:onClick="ubahSemester2Listener" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 7"
                        android:id="@+id/s7"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:clickable="true"
                        android:onClick="ubahSemester2Listener" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 8"
                        android:id="@+id/s8"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:clickable="true"
                        android:visibility="gone"
                        android:onClick="ubahSemester2Listener" />
                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 9"
                        android:id="@+id/s9"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:clickable="true"
                        android:onClick="ubahSemester2Listener" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 10"
                        android:id="@+id/s10"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:clickable="true"
                        android:onClick="ubahSemester2Listener" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 11"
                        android:id="@+id/s11"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:visibility="gone"
                        android:clickable="true"
                        android:onClick="ubahSemester2Listener" />

                    <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Semester 12"
                        android:id="@+id/s12"
                        android:background="@drawable/rectangle"
                        android:layout_margin="5sp"
                        android:textColor="@color/biru"
                        android:textStyle="italic"
                        android:clickable="true"
                        android:visibility="gone"
                        android:onClick="ubahSemester2Listener" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.2"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/execute"
                android:background="@drawable/circle"
                android:id="@+id/lanjut"
                android:clickable="true"
                android:onClick="ubahSemester2Listener"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
