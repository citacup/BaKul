<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:padding="@dimen/marginluar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/margindalem"
        android:elevation="@dimen/margindalem"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Mata Kuliah"
            android:id="@+id/labeltext"
            style="@style/sectionHeader"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:id="@+id/scrollView"
            android:layout_marginTop="20sp"
            android:layout_weight="0.80">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Isi Review"
                        android:id="@+id/isilabel"
                        android:layout_weight="0.35"
                        android:padding="10sp"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/isi2"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Isi Review"
                        android:id="@+id/isi"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical|left"
                        android:layout_marginLeft="5sp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Suka"
                        android:id="@+id/labelsuka"
                        android:layout_weight="0.35"
                        android:padding="10sp"
                        android:gravity="center_vertical|left"/>

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/suka2"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0sp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="3"
                            android:id="@+id/jumlahsuka"
                            android:gravity="center_vertical|left"
                            android:editable="false"
                            android:focusable="false"
                            android:layout_marginLeft="5sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical|left">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:id="@+id/suka"
                            android:src="@drawable/like"
                            android:background="@drawable/circle"
                            android:layout_marginLeft="5sp"
                            android:onClick="suatuReviewListener"
                            android:clickable="true" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Tidak Suka"
                        android:id="@+id/labeltidaksuka"
                        android:layout_weight="0.35"
                        android:padding="10sp"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/tidaksuka2"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0sp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3">

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:ems="3"
                            android:id="@+id/jumlahtidaksuka"
                            android:gravity="center_vertical|left"
                            android:editable="false"
                            android:focusable="false"
                            android:layout_marginLeft="5sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical|left">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:id="@+id/tidaksuka"
                            android:src="@drawable/dislike"
                            android:background="@drawable/circle"
                            android:layout_marginLeft="5sp"
                            android:onClick="suatuReviewListener"
                            android:clickable="true" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Lapor Review"
                        android:id="@+id/labellapor"
                        android:layout_weight="0.35"
                        android:padding="10sp"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/lapor2"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6">

                        <ImageView
                            android:layout_width="50sp"
                            android:layout_height="50sp"
                            android:layout_marginLeft="5sp"
                            android:src="@drawable/lapor"
                            android:background="@drawable/circle"
                            android:id="@+id/lapor"
                            android:clickable="true"
                            android:onClick="suatuReviewListener"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:gravity="center_vertical|right"
            android:padding="5sp">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/ok"
                android:background="@drawable/circle"
                android:id="@+id/ok"
                android:clickable="true"
                android:onClick="suatuReviewListener"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
