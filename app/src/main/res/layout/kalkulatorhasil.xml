<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/marginluar"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:elevation="@dimen/margindalem"
        android:orientation="vertical"
        android:padding="@dimen/margindalem">

        <TextView
            android:id="@+id/label"
            style="@style/sectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:text="Kalkulator Nilai"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/namamatkul"
            style="@style/sectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="Aljabar Linier"/>

        <LinearLayout
            android:id="@+id/komponen"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.40"
            android:background="@drawable/abc_ab_share_pack_holo_light">

            <ListView
                android:id="@+id/listkomponen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.60"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ScrollView
                android:id="@+id/hasil"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10sp"
                android:layout_weight="0.7">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/total1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Total Nilai"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/total2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:text=":"/>

                        <EditText
                            android:id="@+id/total3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:editable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="number"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/A1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Menuju Nilai A"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/A2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:text=":"/>

                        <EditText
                            android:id="@+id/A3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:editable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="number"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/Am1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Menuju Nilai A-"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/Am2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:text=":"/>

                        <EditText
                            android:id="@+id/Am3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:editable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="number"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/Bp1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Menuju Nilai B+"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/Bp2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:text=":"/>

                        <EditText
                            android:id="@+id/Bp3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:editable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="number"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/B1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Menuju Nilai B"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/B2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:text=":"/>

                        <EditText
                            android:id="@+id/B3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:editable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="number"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/Bm1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Menuju Nilai B-"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/Bm2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:text=":"/>

                        <EditText
                            android:id="@+id/Bm3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:editable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="number"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/Cp1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Menuju Nilai C+"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/Cp2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:text=":"/>

                        <EditText
                            android:id="@+id/Cp3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:editable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="number"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15sp"
                        android:paddingRight="15sp">

                        <TextView
                            android:id="@+id/C1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="Menuju Nilai C"
                            android:textStyle="bold"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/C2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.05"
                            android:text=":"/>

                        <EditText
                            android:id="@+id/C3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:editable="false"
                            android:ems="10"
                            android:focusable="false"
                            android:inputType="number"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hitung"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7sp"
                    android:background="@drawable/circle"
                    android:clickable="true"
                    android:src="@drawable/execute"/>

                <ImageView
                    android:id="@+id/simpan"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7sp"
                    android:background="@drawable/circle"
                    android:clickable="true"
                    android:onClick="kalkulatorHasilListener"
                    android:src="@drawable/save"/>

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7sp"
                    android:background="@drawable/circle"
                    android:clickable="true"
                    android:onClick="kalkulatorHasilListener"
                    android:src="@drawable/hapus"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
