<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--parent="android:style/Theme.Holo.Light"-->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!--parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse"-->
        <item name="android:background">@color/biru</item>
        <item name="android:actionButtonStyle">@style/ActionButton</item>

        <!-- Support library compatibility -->
        <item name="background">@color/biru</item>
        <item name="actionButtonStyle">@style/ActionButton</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme1" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar1</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar1</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar1"
        parent="android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/biru</item>
        <item name="android:icon">@drawable/logo_kecil</item>

        <!-- Support library compatibility -->
        <item name="background">@color/biru</item>
        <item name="icon">@drawable/logo_kecil</item>
    </style>

    <style name="ActionButton"
        parent="android:style/Widget.Holo.Light.ActionButton">
        <item name="android:textAllCaps">false</item>

        <!-- Support library compatibility -->
        <item name="textAllCaps">false</item>
    </style>


</resources>