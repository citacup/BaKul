<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:padding="@dimen/marginluar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/margindalem"
        android:elevation="@dimen/margindalem"
        android:background="@android:color/white">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff0272bc"
            android:id="@+id/labellayout"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review Matkul"
                android:id="@+id/labeltext"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize"
                android:textStyle="italic"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Mata Kuliah"
            android:id="@+id/label"
            style="@style/sectionHeader"
            android:layout_marginTop="20sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:id="@+id/scrollView"
            android:layout_marginTop="5sp"
            android:layout_weight="0.80">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Suka"
                        android:id="@+id/labelsuka"
                        android:layout_weight="0.35"
                        android:padding="10sp"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/suka2"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal" />

                    <EditText
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/jumlahsuka"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical|center_horizontal" />

                    <Button android:id="@+id/suka"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Suka"
                        android:textStyle="italic"
                        android:background="@color/biru"
                        android:textColor="@android:color/white"
                        android:onClick="suatuReviewListener"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="0.3" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Jumlah Tidak Suka"
                        android:id="@+id/labeltidaksuka"
                        android:layout_weight="0.35"
                        android:padding="10sp"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/tidaksuka2"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal" />

                    <EditText
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/jumlahtidaksuka"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical|center_horizontal" />

                    <Button android:id="@+id/tidaksuka"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Suka"
                        android:textStyle="italic"
                        android:background="@color/biru"
                        android:textColor="@android:color/white"
                        android:onClick="suatuReviewListener"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="0.3" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="10sp">

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Lapor Review"
                        android:id="@+id/labellapor"
                        android:layout_weight="0.35"
                        android:padding="10sp"
                        android:gravity="center_vertical|left" />

                    <TextView
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/lapor2"
                        android:layout_weight="0.05"
                        android:gravity="center_vertical|center_horizontal" />

                    <EditText
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/jumlahlapor"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical|center_horizontal"
                        android:visibility="invisible"/>

                    <Button android:id="@+id/lapor"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:text="Lapor"
                        android:textStyle="italic"
                        android:background="@color/biru"
                        android:textColor="@android:color/white"
                        android:onClick="suatuReviewListener"
                        android:paddingLeft="10sp"
                        android:paddingRight="10sp"
                        android:layout_marginLeft="5sp"
                        android:layout_weight="0.3" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:gravity="center_vertical|right"
            android:padding="5sp">

            <Button android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OK"
                android:textStyle="italic"
                android:background="@color/biru"
                android:textColor="@android:color/white"
                android:onClick="suatuReviewListener"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:layout_marginLeft="5sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
