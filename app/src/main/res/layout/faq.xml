<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/marginluar"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:elevation="@dimen/margindalem"
        android:orientation="vertical"
        android:padding="@dimen/margindalem"
        android:weightSum="1">

        <ImageView
            android:id="@+id/labelimg"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:src="@drawable/faq"/>

        <TextView
            android:id="@+id/labeltext"
            style="@style/sectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Tanya Jawab"
            android:textStyle="bold"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:padding="10sp">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/label1"
                    style="@style/sectionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T : Apakah perbedaan Ilmu Komputer dan Sistem Informasi?"/>

                <TextView
                    android:id="@+id/rincian1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="J : Program Sistem Informasi lebih berfokus pada pengintegrasian solusi berbasis teknologi informasi dengan proses bisnis untuk memenuhi kebutuhan informasi bisnis dan usaha-usaha lain, yang memungkinkan tercapainya tujuan sebuah organisasi dengan efektif dan efisien. Perspektif bidang ilmu ini lebih memandang teknologi sebagai instrumen untuk mencatat, menghasilkan, mengolah, serta mendistribusikan informasi. Ahli-ahli di bidang ini memiliki kemampuan untuk memetakan kebutuhan informasi sebuah organisasi, dan menentukan cara terbaik teknologi informasi dapat digunakan untuk memenuhi kebutuhan tersebut. \n Ilmu Komputer memiliki fokus pada kemampuan untuk merancang dan mengembangkan perangkat lunak yang canggih untuk menyelesaikan permasalahan yang rumit. Cakupannya cukup luas, mulai dari fondasi teoritis mengenai perancangan algoritma, yaitu konsep dasar yang melandasi pengembangan perangkat lunak, sampai kepada penerapan mutakhir berupa aplikasi robotika, kecerdasan buatan, bio-informatika, dan topik-topik menarik lainnya."
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/label2"
                    style="@style/sectionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="T : Apa saja bidang minat ilmu komputer yang ada di Fasilkom?"/>

                <TextView
                    android:id="@+id/rincian2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="J : Bidang Minat Ilmu Komputer : \n- Arsitektur dan Infrastruktur Komputer \n- Pengolahan Mutimedia \n- Teknologi Perangkat Lunak \n- Komputasi Ilmiah"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/label4"
                    style="@style/sectionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="T : Apa saja bidang minat sistem informasi yang ada di Fasilkom?"/>

                <TextView
                    android:id="@+id/rincian4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="J : Bidang minat Sistem Informasi : \n- System Enterprise \n- Teknologi Informasi"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>

                <TextView
                    android:id="@+id/label3"
                    style="@style/sectionHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="T : Apa saja ketentuan untuk bisa lulus dari Fasilkom?"/>

                <TextView
                    android:id="@+id/rincian3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="J : Memenuhi standar minimal kurikulum, yakni 144 SKS yang terdiri dari 18 SKS Mata Kuliah Wajib Universitas, 5 SKS Mata Kuliah Wajib Rumpun, 43 SKS Mata Kuliah Wajib Fakultas, 47 SKS Mata Kuliah Wajib Program Studi, 21 SKS Mata Kuliah Pilihan Bidang Minat, 10 SKS Mata Kuliah Pilihan Lain"
                    android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ok"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:onClick="faqListener"
                android:src="@drawable/ok"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
