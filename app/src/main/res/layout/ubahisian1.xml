<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:padding="@dimen/marginluar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/margindalem"
        android:background="@android:color/white"
        android:elevation="@dimen/margindalem">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff0272bc"
            android:id="@+id/labellayout"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perancangan Kuliah"
                android:id="@+id/labeltext"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textsize"
                android:textStyle="italic"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester X telah lulus"
            android:id="@+id/label"
            style="@style/sectionHeader"
            android:layout_marginTop="20sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:id="@+id/lulus"
            android:background="@drawable/abc_ab_share_pack_holo_light"
            android:layout_marginTop="5sp"
            android:layout_weight="0.38">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listlulus" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.12"
            android:gravity="center_horizontal|bottom">

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerKategori"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom">

                <EditText
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/matkulcari"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cari"
                    android:src="@drawable/ubah"
                    android:onClick="ubahIsian1Listener"
                    android:nestedScrollingEnabled="false"
                    android:clickable="true" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:id="@+id/matkul"
            android:background="@drawable/abc_ab_share_pack_holo_light"
            android:layout_marginTop="5sp"
            android:layout_weight="0.38">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listmatakuliah" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.12"
            android:gravity="center_vertical|right"
            android:layout_marginTop="3sp">

            <Button android:id="@+id/simpan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Simpan"
                android:textStyle="italic"
                android:background="@color/biru"
                android:textColor="@android:color/white"
                android:clickable="true"
                android:onClick="ubahIsian1Listener"
                android:paddingLeft="10sp"
                android:paddingRight="10sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
