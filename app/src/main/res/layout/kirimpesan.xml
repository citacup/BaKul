<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/marginluar"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:elevation="@dimen/margindalem"
        android:orientation="vertical"
        android:padding="@dimen/margindalem"
        android:weightSum="1">

        <ImageView
            android:id="@+id/labelimg"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:src="@drawable/hubungi"/>

        <TextView
            android:id="@+id/labeltext"
            style="@style/sectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Hubungi Kami"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/labeljudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Laporkan masalah, bug, error, kritik dan saran pada kami :)"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/tua"/>

        <EditText
            android:id="@+id/editTextPesan"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_marginTop="10sp"
            android:layout_weight="0.5"
            android:background="@drawable/abc_ab_share_pack_holo_light"
            android:ems="10"
            android:gravity="top"
            android:hint="Pesan Anda di sini ..."
            android:inputType="textMultiLine"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.4"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buttonPesan"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/circle"
                android:clickable="true"
                android:onClick="kirimPesanListener"
                android:src="@drawable/kirim"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
