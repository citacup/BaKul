<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/marginluar"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:elevation="@dimen/margindalem"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/mainlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp"
            android:background="@color/muda"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mainimage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:src="@drawable/main"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelmain"
                style="@style/sectionHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="30sp"
                android:gravity="center_horizontal"
                android:text="Fitur Utama"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/satulayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="mainMenuListener"
                    android:orientation="vertical"
                    android:padding="5sp">

                    <ImageView
                        android:id="@+id/satuimage"
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/circle"
                        android:clickable="true"
                        android:onClick="mainMenuListener"
                        android:src="@drawable/f1"/>

                    <TextView
                        android:id="@+id/satutext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mainMenuListener"
                        android:text="Informasi Kuliah"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/tua"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dualayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="mainMenuListener"
                    android:orientation="vertical"
                    android:padding="5sp">

                    <ImageView
                        android:id="@+id/duaimage"
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/circle"
                        android:clickable="true"
                        android:onClick="mainMenuListener"
                        android:src="@drawable/f2"/>

                    <TextView
                        android:id="@+id/duatext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mainMenuListener"
                        android:text="Perancangan Kuliah"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/tua"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tigalayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="mainMenuListener"
                    android:orientation="vertical"
                    android:padding="5sp">

                    <ImageView
                        android:id="@+id/tigaimage"
                        android:layout_width="70sp"
                        android:layout_height="70sp"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/circle"
                        android:clickable="true"
                        android:onClick="mainMenuListener"
                        android:src="@drawable/f3"/>

                    <TextView
                        android:id="@+id/tigatext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="mainMenuListener"
                        android:text="Kalkulator Nilai"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/tua"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
