<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/relativeLayout"
    android:padding="@dimen/marginluar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/margindalem"
        android:elevation="@dimen/margindalem"
        android:background="@android:color/white">

        <ImageView
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@drawable/pengaturan"
            android:id="@+id/labelimg"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengaturan"
            android:id="@+id/labeltext"
            android:textStyle="bold"
            style="@style/sectionHeader"
            android:layout_marginTop="5sp"
            android:gravity="center_vertical|center_horizontal"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.80"
            android:layout_marginTop="5sp"
            android:padding="10sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avatar Pengguna"
                android:id="@+id/label1"
                style="@style/sectionHeader"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/avatar1"
                    android:padding="5dp"
                    android:src="@drawable/avatar1"
                    android:clickable="true"
                    android:onClick="menuPenggunaListener"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/avatar2"
                    android:padding="5dp"
                    android:src="@drawable/avatar2"
                    android:clickable="true"
                    android:onClick="menuPenggunaListener"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/avatar3"
                    android:padding="5dp"
                    android:src="@drawable/avatar3"
                    android:clickable="true"
                    android:onClick="menuPenggunaListener"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/avatar4"
                    android:padding="5dp"
                    android:src="@drawable/avatar4"
                    android:clickable="true"
                    android:onClick="menuPenggunaListener"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/avatar5"
                    android:padding="5dp"
                    android:src="@drawable/avatar5"
                    android:clickable="true"
                    android:onClick="menuPenggunaListener"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tema Pengguna"
                android:id="@+id/label2"
                style="@style/sectionHeader"
                android:layout_marginTop="10sp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/warna1"
                    android:padding="5dp"
                    android:src="@drawable/circle"
                    android:clickable="true"
                    android:onClick="temaListener"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/warna2"
                    android:padding="5dp"
                    android:src="@drawable/circlered"
                    android:clickable="true"
                    android:onClick="temaListener"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/warna3"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/warna4"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:id="@+id/warna5"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:gravity="center_vertical|right">

            <ImageView
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:src="@drawable/apply"
                android:background="@drawable/circle"
                android:id="@+id/simpan"
                android:clickable="true"
                android:onClick="menuPenggunaListener"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
