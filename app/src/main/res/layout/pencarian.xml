<RelativeLayout
    android:id="@+id/relativeLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/marginluar"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:elevation="@dimen/margindalem"
        android:orientation="vertical"
        android:padding="@dimen/margindalem"
        android:weightSum="1">

        <ImageView
            android:id="@+id/labelimg"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:background="@drawable/circlestroke"
            android:src="@drawable/matkul"/>

        <TextView
            android:id="@+id/label"
            style="@style/sectionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:text="Informasi Mata Kuliah"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/namalayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="pencarianListener"
                    android:orientation="vertical"
                    android:padding="5sp">

                    <ImageView
                        android:id="@+id/namaimage"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginBottom="5sp"
                        android:background="@drawable/circlelight"
                        android:clickable="true"
                        android:onClick="pencarianListener"
                        android:src="@drawable/nama"/>

                    <TextView
                        android:id="@+id/namatext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="pencarianListener"
                        android:text="Cari Berdasar Nama"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/tua"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/kategorilayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical|center_horizontal"
                    android:onClick="pencarianListener"
                    android:orientation="vertical"
                    android:padding="5sp">

                    <ImageView
                        android:id="@+id/kategoriimage"
                        android:layout_width="60sp"
                        android:layout_height="60sp"
                        android:layout_marginBottom="5sp"
                        android:background="@drawable/circlelight"
                        android:clickable="true"
                        android:onClick="pencarianListener"
                        android:src="@drawable/kategori"/>

                    <TextView
                        android:id="@+id/kategoritext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:onClick="pencarianListener"
                        android:text="Cari Berdasar Kategori"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/tua"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
