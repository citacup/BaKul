<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@android:color/white"
    android:id="@+id/relativeLayout">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#ff0272bc"
            android:id="@+id/labellayout"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kalkulator Nilai"
                android:id="@+id/labeltext"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:textStyle="italic"
                android:paddingTop="10sp"
                android:paddingBottom="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aljabar Linier"
            android:id="@+id/matkul"
            style="@style/sectionHeader"
            android:layout_marginTop="30sp" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:id="@+id/komponen"
            android:background="@drawable/abc_ab_share_pack_holo_light"
            android:layout_marginTop="10sp"
            android:layout_weight="0.45">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/listView" />
        </ScrollView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0sp"
            android:layout_weight="0.55"
            android:gravity="center_horizontal">

            <ScrollView
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:id="@+id/hasil"
                android:background="@drawable/abc_ab_share_pack_holo_light"
                android:layout_marginTop="10sp"
                android:layout_weight="0.7"
                android:layout_marginRight="10sp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                        android:paddingRight="5sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Total Nilai"
                        android:id="@+id/Total1"
                        android:layout_weight="0.6"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/Total2"
                        android:layout_weight="0.05" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/Total3"
                        android:layout_weight="0.35" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Menuju Nilai A"
                        android:id="@+id/A1"
                        android:layout_weight="0.6"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/A2"
                        android:layout_weight="0.05" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/A3"
                        android:layout_weight="0.35" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Menuju Nilai A-"
                        android:id="@+id/Am1"
                        android:layout_weight="0.6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/Am2"
                        android:layout_weight="0.05" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/Am3"
                        android:layout_weight="0.35" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Menuju Nilai B+"
                        android:id="@+id/Bp1"
                        android:layout_weight="0.6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/Bp2"
                        android:layout_weight="0.05" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/Bp3"
                        android:layout_weight="0.35" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Menuju Nilai B"
                        android:id="@+id/B1"
                        android:layout_weight="0.6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/B2"
                        android:layout_weight="0.05" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/B3"
                        android:layout_weight="0.35" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Menuju Nilai B-"
                        android:id="@+id/Bm1"
                        android:layout_weight="0.6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/Bm2"
                        android:layout_weight="0.05" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/Bm3"
                        android:layout_weight="0.35" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Menuju Nilai C+"
                        android:id="@+id/Cp1"
                        android:layout_weight="0.6" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/Cp2"
                        android:layout_weight="0.05" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/Cp3"
                        android:layout_weight="0.35" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Menuju Nilai C"
                        android:id="@+id/C1"
                        android:layout_weight="0.6"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:id="@+id/C2"
                        android:layout_weight="0.05" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/C3"
                        android:layout_weight="0.35" />
                </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0sp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical|center_horizontal">

                <Button android:id="@+id/hitung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hitung Nilai"
                    android:textStyle="italic"
                    android:background="@color/biru"
                    android:textColor="@android:color/white"
                    android:onClick="mainMenu"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp" />

                <Button android:id="@+id/simpan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="Simpan"
                    android:textStyle="italic"
                    android:background="@color/biru"
                    android:textColor="@android:color/white"
                    android:onClick="mainMenu"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
